{
  "name": "bee-status",
  "version": "0.1.0",
  "author": "Swarm Team <info@ethswarm.org>",
  "description": "An app for showing the status of the bee node.",
  "keywords": [
    "bee",
    "swarm",
    "decentralised",
    "storage",
    "ethereum",
    "typescript",
    "p2p"
  ],
  "homepage": "./",
  "main": "public/electron.js",
  "bugs": {
    "url": "https://github.com/ethersphere/bee-status/issues/"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethersphere/bee-status.git"
  },
  "dependencies": {
    "@ethersphere/bee-js": "^0.7.1",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@types/react-router": "^5.1.13",
    "@types/react-router-dom": "^5.1.7",
    "axios": "^0.21.1",
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "feather-icons": "^4.28.0",
    "material-ui-dropzone": "^3.5.0",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.0.3",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-identicons": "^1.2.5",
    "react-router-dom": "^5.2.0",
    "react-syntax-highlighter": "^15.4.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/qrcode.react": "^1.0.1",
    "@types/react-copy-to-clipboard": "^5.0.0",
    "@types/react-dom": "^17.0.3",
    "@types/react-syntax-highlighter": "^13.5.0",
    "@types/react": "^17.0.3",
    "concurrently": "^5.2.0",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "^3.1.1",
    "electron": "^12.0.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint": "^7.23.0",
    "prettier": "^2.2.1",
    "react-scripts": "4.0.3",
    "typescript": "^4.2.3",
    "wait-on": "^5.1.0",
    "web-vitals": "^1.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run electron-build-bootstrap && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "npm run electron-build-bootstrap && concurrently \"BROWSER=none npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder build",
    "electron-build:linux": "npm run build && electron-builder build -l --publish never",
    "electron-build:linux:deb": "npm run build && electron-builder build --linux deb --publish never",
    "electron-build:linux:rpm": "npm run build && electron-builder build --linux rpm --publish never",
    "electron-build:win": "npm run build && electron-builder build -w --publish never",
    "electron-build:mac": "npm run build && electron-builder build -m dmg --publish never",
    "electron-build-bootstrap": "tsc --esModuleInterop --outDir public src/electron.ts",
    "lint": "eslint --fix \"src/**/*.ts\" \"src/**/*.tsx\" && prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint:check": "eslint \"src/**/*.ts\" \"src/**/*.tsx\" && prettier --check \"src/**/*.ts\" \"src/**/*.tsx\""
  },
  "build": {
    "appId": "org.ethswarm.bee-status",
    "productName": "Bee Status",
    "extraMetadata": {
      "main": "build/electron.js"
    },
    "win": {
      "icon": "build/icons/icon.png"
    },
    "linux": {
      "icon": "build/icons/icon.icns"
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
